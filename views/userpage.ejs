<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chatrooms</title>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@3.4.1/dist/css/bootstrap.min.css" 
    integrity="sha384-HSMxcRTRxnN+Bdg0JdbxYKrThecOKuH5zCYotlSAcp1+c8xmyTe9GYg1l9a69psu" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <h1 class="mb-4">Your Chatrooms</h1>

        <% chatrooms.forEach(chatroom => { %>
            <div class="card mt-4">
                <div class="card-body">
                    <h4 class="card-title"> <%= chatroom.name %> </h4>
                    <div class="card-subtitle text-muted mb-2"> 
                        <%= chatroom.createdAt %>
                    </div>
                    <div class="card-subtitle text-muted mb-2"> 
                        <%= chatroom.admin %>
                    </div>
                    <a href="">Start Chatting</a>
                    <button>Leave Room</button>
                </div>
            </div>
        <% }) %>
        
        <h2 class="mb-4">Your Requests</h2>

        <% requests.forEach(request => { %>
        <div class="card mt-4">
            <div class="card-body">
                <h4 class="card-title"> <%= request.name %> </h4>
            </div>
            <a href="">Accept</a>
            <button>Decline</button>
        </div>
        <% }) %>

        <div class="container">
            <div class="row justify-content-center" style="max-width: 500px; padding: 20px;">
                <h3>Join a chatroom</h3>
                <form action="<%= `${url}` %>" method="post">
                    <div class="form-group">
                        <input type="text" name="roomname" placeholder="Chatroom Name" required>
                    </div>
                    <div class="form-group">
                        <input type="password" name="password" placeholder="Password" required>
                    </div>
                    <input type="submit" value="Submit" class="btn btn-primary">
                </form>
            </div>
        </div>

        <div>
            <a href="<%= `${url}/createPage` %>">Create a Chatroom</a>
        </div>
    </div>
</body>
</html>