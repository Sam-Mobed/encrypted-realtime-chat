<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles/chatroom.css" />
    <title>Chatroom</title>
</head>
<body>
    <div class="chat-container">
        <header class="chat-header">
          <h1><i class="fas fa-smile"></i> Realtime Chatroom with end-to-end encryption </h1>
          <a id="leave-btn" class="btn" href="<%= url %>">Leave Room</a>
        </header>
        <main class="chat-main">
          <div class="chat-sidebar">
            <h3><i class="fas fa-comments"></i> Room Name:</h3>
            <h2 id="room-name"></h2>
            <h3><i class="fas fa-users"></i> Users</h3>
            <ul id="users"></ul>
          </div>
          <div class="chat-messages">
            <% if(logs.length!==0){ %>
              <% logs.forEach(log => { %>
                <div class="message">
                  <p class="meta-info"> <%= log.sender %> 
                    <span style="float: right;"><%= log.sentAt.toLocaleDateString(undefined, { hour: 'numeric', minute: 'numeric', month: 'short', day: 'numeric' }) %> </span>
                  </p>
                  <p class="content"> <%= log.content %></p>
                </div>
              <% }) %>
            <% } %>
          </div>
        </main>
        <div class="chat-form-container">
          <form id="chat-form">
            <input
              id="msg"
              type="text"
              placeholder="Enter Message"
              required
              autocomplete="off"
            />
            <button class="btn"><i class="fas fa-paper-plane"></i> Send</button>
          </form>
        </div>
      </div>
    
    <script src="/socket.io/socket.io.js"></script>
    <script src="/client/chat.js"></script>
</body>
</html>